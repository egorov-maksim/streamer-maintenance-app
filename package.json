{
  "name": "streamer-maintenance-app",
  "version": "1.2.0",
  "description": "Streamer cleaning tracking app with SQLite backend",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "start:test": "DB_FILE=./backend/test.db node backend/server.js",
    "test": "NODE_ENV=test DB_FILE=./backend/test.db node --test testing/tests/*.test.js testing/tests/unit/*.test.js",
    "test:e2e": "playwright test --config=testing/playwright.config.js",
    "test:e2e:headed": "playwright test --config=testing/playwright.config.js --headed",
    "test:all": "npm test && npm run test:e2e"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-session": "^1.19.0",
    "helmet": "^7.2.0",
    "humps": "^2.0.1",
    "jspdf": "^4.1.0",
    "node-cron": "^4.2.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "nodemon": "^3.0.2",
    "supertest": "^7.2.2"
  }
}
